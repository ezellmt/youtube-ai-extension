{
  "extends": "plasmo/templates/tsconfig.base",
  "exclude": ["node_modules"],
  "include": [".plasmo/index.d.ts", "./**/*.ts", "./**/*.tsx"],
  "compilerOptions": {
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "~*": ["./*"],
      "~src/*": ["./src/*"],
      "@/*": ["./*"]
    },
    "baseUrl": ".",
    "types": ["plasmo", "chrome"]
  }
}